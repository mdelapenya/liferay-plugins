<?xml version="1.0"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="ant-arquillian" class="org.apache.log4j.FileAppender">
		<param name="File" value="test-results/ant-calendar-test.arquillian.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%6r] %8c{1} : %m%n" />
		</layout>
	</appender>

	<logger name="org.apache.tools.ant.Project">
		<level value="DEBUG" />
		<appender-ref ref="ant-arquillian" />
	</logger>

	<logger name="org.apache.tools.ant.Target">
		<level value="DEBUG" />
		<appender-ref ref="ant-arquillian" />
	</logger>

	<logger name="org.apache.tools.ant.taskdefs">
   		<level value="DEBUG" />
   		<appender-ref ref="ant-arquillian" />
	</logger>

	<logger name="org.apache.tools.ant.taskdefs.Echo">
   		<level value="DEBUG" />
   		<appender-ref ref="ant-arquillian" />
	</logger>

	<root>
		<priority value="ERROR" />
		<appender-ref ref="ant-arquillian" />
	</root>
</log4j:configuration>