<ivysettings>
	<settings defaultResolver="default" />

	<resolvers>
		<ibiblio name="local-maven2" m2compatible="true" root="file:///${user.home}/.m2/repository/" />
		<ibiblio name="maven2" m2compatible="true" root="http://repo1.maven.org/maven2" />

		<chain name="default">
			<resolver ref="local-maven2" />
			<resolver ref="maven2" />
		</chain>
	</resolvers>
</ivysettings>